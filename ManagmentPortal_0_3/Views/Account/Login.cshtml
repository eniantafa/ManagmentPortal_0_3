@model Login

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">

    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/sign-in/">

    <!-- Bootstrap core CSS -->
    <link href="../../dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="signin.css" rel="stylesheet">
</head>

<body class="text-center">

    <form method="post" asp-controller="Account" asp-action="Login" class="form-signin">
        <div asp-validation-summary="All"></div>
        @*<img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">*@
        <h1 class="h3 mb-3 font-weight-normal">Sign in as admin</h1>

        <div>
        <label asp-for="UserName" class="sr-only">UserName</label>
        <input class="form-control" placeholder="Your Username" required autofocus  asp-for="UserName" />
        <span asp-validation-for="UserName"></span>           
        </div>

        <div>
        <label asp-for="Password" class="sr-only">Password</label>
        <input class="form-control" placeholder="Password" required asp-for="Password" />
        <span asp-validation-for="Password"></span>
        </div>

        <div class="checkbox mb-3">
            <label asp-for="RememberMe">Remember Me</label>
            <input asp-for="RememberMe" />
            <span asp-validation-for="RememberMe"></span>
        </div>

        <div>
            <button class="btn btn-lg btn-primary btn-block" type="submit" value="Log In">Sign in</button>
            <button asp-action="Register" asp-controller="Account" class="btn btn-lg btn-primary btn-block" type="submit" value="Register">Register</button>
        </div>
      
    </form>
</body>
</html>
