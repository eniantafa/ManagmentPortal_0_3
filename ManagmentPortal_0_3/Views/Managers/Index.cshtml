@model IEnumerable<ManagmentPortal_0_3.Models.Manager>
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> signInManager;


@{
    ViewData["Title"] = "Index";
}

<h1>List of all managers</h1>

@if (signInManager.IsSignedIn(User))
{
    <p>
        <a class="btn btn-primary" asp-action="Create">Add New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ManagerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ManagerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ManagerId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ManagerId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ManagerId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ManagerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ManagerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ManagerId">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
